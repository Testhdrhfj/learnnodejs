<html>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <meta charset="UTF-8">
    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row pt-4">
            <div class="col pt-3">
                <form method="post" action="/save-file">
                    <input type="text" name="input-text" id="luutru" class="luutru" placeholder="Nhập vào đây"
                        onkeydown="checkkey(event)"></input>
                </form>
                <ul class="pt-3" id="ghichu">
                    <% for(i in data){ %>
                        <% if (data[i] !=='' ) { %>
                            <li>
                                <%= data[i] %>
                                    <span>(<a href="/xoa-vitri?giatri=<%= i %>">x</a>)</span>
                                    <% } %>
                            </li>
                            <% } %>
                </ul>
                <!-- <button type="submit">Lưu</button> -->
            </div>
        </div>
    </div>
    <script src="/src/app.js"></script>
</body>

</html>